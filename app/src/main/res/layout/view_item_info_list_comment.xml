<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_item_info_list_item_comment_padding_vertical"
    android:paddingEnd="@dimen/activity_item_info_list_item_comment_padding_horizontal"
    android:paddingLeft="@dimen/activity_item_info_list_item_comment_padding_horizontal"
    android:paddingRight="@dimen/activity_item_info_list_item_comment_padding_horizontal"
    android:paddingStart="@dimen/activity_item_info_list_item_comment_padding_horizontal"
    android:paddingTop="@dimen/activity_item_info_list_item_comment_padding_vertical">

    <ImageView
        android:id="@+id/ivUser"
        android:layout_width="@dimen/activity_item_info_list_item_comment_image_size"
        android:layout_height="@dimen/activity_item_info_list_item_comment_image_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/view_item_comment_text_margin"
        android:layout_marginStart="@dimen/view_item_comment_text_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>