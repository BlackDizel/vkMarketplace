<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_cart_list_item_padding_vertical"
    android:paddingEnd="@dimen/view_item_cart_list_margin"
    android:paddingLeft="@dimen/view_item_cart_list_margin"
    android:paddingRight="@dimen/view_item_cart_list_margin"
    android:paddingStart="@dimen/view_item_cart_list_margin"
    android:paddingTop="@dimen/activity_cart_list_item_padding_vertical">

    <ImageView
        android:id="@+id/ivItem"
        android:layout_width="@dimen/item_cart_image_size"
        android:layout_height="@dimen/item_cart_image_size" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/item_cart_text_margin"
        android:paddingStart="@dimen/item_cart_text_margin">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingEnd="@dimen/view_item_cart_list_margin"
        android:paddingLeft="@dimen/view_item_cart_list_margin"
        android:paddingRight="@dimen/view_item_cart_list_margin"
        android:paddingStart="@dimen/view_item_cart_list_margin" />

    <ImageView
        android:id="@+id/ivRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_white_24dp"
        android:tint="@color/colorPrimary" />
</LinearLayout>
