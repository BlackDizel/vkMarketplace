<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/suggestion_list_item_margin"
    android:layout_marginRight="@dimen/suggestion_list_item_margin"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="@dimen/suggestion_list_item_photo_size"
            android:layout_height="@dimen/suggestion_list_item_photo_size"
            android:layout_margin="@dimen/suggestion_list_item_photo_margin"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lines="2"
            android:paddingBottom="@dimen/suggestion_list_item_text_margin_bottom"
            android:paddingEnd="@dimen/suggestion_list_item_text_margin_horizontal"
            android:paddingLeft="@dimen/suggestion_list_item_text_margin_horizontal"
            android:paddingRight="@dimen/suggestion_list_item_text_margin_horizontal"
            android:paddingStart="@dimen/suggestion_list_item_text_margin_horizontal" />
    </LinearLayout>


</android.support.v7.widget.CardView>