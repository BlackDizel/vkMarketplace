<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/menu_item_padding_vertical"
    android:paddingEnd="@dimen/menu_item_padding_horizontal"
    android:paddingLeft="@dimen/menu_item_padding_horizontal"
    android:paddingRight="@dimen/menu_item_padding_horizontal"
    android:paddingStart="@dimen/menu_item_padding_horizontal"
    android:paddingTop="@dimen/menu_item_padding_vertical">

    <ImageView
        android:id="@+id/ivItem"
        android:layout_width="@dimen/menu_item_image_size"
        android:layout_height="@dimen/menu_item_image_size"
        android:scaleType="centerCrop" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/menu_item_text_padding"
        android:paddingStart="@dimen/menu_item_text_padding">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>