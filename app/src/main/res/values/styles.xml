<resources>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarOverlay">
        <item name="titleTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="TranparentAppBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ToolbarDark" parent="ThemeOverlay.AppCompat.ActionBar" />


    <style name="styleNumberPicker">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
